<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailAcaraActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        app:theme="@style/ToolbarTheme"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ff7043"
        app:titleTextColor="@color/colorWhite"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/detil_acara" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageDetail"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:scaleType="fitXY"
                tools:src="@drawable/sman14"/>

            <TextView
                android:id="@+id/txtJudul"
                android:text="Judulnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff7043"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTanggal"
                android:text="tanggalnya"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff7043"
                android:paddingLeft="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtIsiBerita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_margin="5dp"
                android:text="isi text berita"
                android:paddingLeft="5dp"
                android:textColor="#2d3436"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtSumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="instagram"
                android:textColor="#2d3436"
                android:textSize="15sp" />
            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/progressbaracara"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>